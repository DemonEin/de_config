[advice]
    addEmptyPathspec = false
    statusHints = false
[branch]
    sort = -committerdate
[color "decorate"]
    HEAD = red
    branch = blue
    tag = yellow
    remoteBranch = magenta
[diff]
	tool = nvimdiff
    renames = true
    interHunkContext = 10
[format]
    pretty = custom-medium
    [pretty]
        custom-short = %C(yellow)%h%C(auto) • %an • %cr • %cs%d%+s%n
        custom-medium = %C(yellow)%h%C(auto) • %an • %cr • %cs%d%+s%n%w(0,4,4)%+b
[init]
    defaultBranch = main
[merge]
	tool = nvimdiff2
	autoStash = true
[difftool]
	prompt = false
[mergetool]
	hideResolved = true
	keepBackup = false
[mergetool "nvimdiff2"]
    cmd = nvim -d $LOCAL $MERGED $REMOTE -c 'execute \"normal \\<C-W>\\<Right>\"'
[core]
	editor = nvim
[submodule]
	recurse = true
	fetchJobs = 0
[push]
	autoSetupRemote = true
[status]
    branch = true
    showUntrackedFiles = all
[rebase]
	autoStash = true
